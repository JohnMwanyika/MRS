doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Mail Recovery
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-NVctBQYgM0i0jL6MvkHCFjK2FKtXsZVEJNAnHbDZMGSEaTtavCfN/39TtWbkEPPj40tk9Xj+aRrtZmSdbZB/g==" crossorigin="anonymous" referrerpolicy="no-referrer" )
        style.
            body {
                background-color: #f8f9fa;
            }
    body
        .container.my-5
            .row.justify-content-center
                .col-lg-8
                    .card.border-0.shadow-sm.rounded-lg
                        .card-header.bg-white.border-0.pb-0
                            h2.text-center.Fancy Mail Recovery system
                        .card-body
                            form(action="/mails/user" method="post")
                                .form-floating.mb-3
                                    select.form-select#floatingSelect(aria-label="Floating label select example")
                                        option(selected) Open this select menu
                                        option(value="1") One
                                        option(value="2") Two
                                        option(value="3") Three
                                    label(for="floatingSelect") Department

                                .form-floating.mb-3
                                    input(type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name", required)
                                    label(for="firstName") First Name
                                .form-floating.mb-3
                                    input(type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name", required)
                                    label(for="lastName") Last Name
                                //- .form-floating.mb-3
                                //-     input(type="email" class="form-control" id="email" name="email" placeholder="Email", required)
                                //-     label(for="email") Email
                                button(type="submit" class="btn btn-primary w-100 mt-3")
                                    i.fa.fa-paper-plane.me-2
                                    | Submit
                                script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js")